# Development Environment Configuration
# Copy to dev.env and fill in actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx

# DynamoDB Tables
DYNAMODB_SALES_TABLE=SalesTable-dev
DYNAMODB_BUYERS_TABLE=BuyersTable-dev
DYNAMODB_PRODUCERS_TABLE=ProducersTable-dev

# S3 Buckets
S3_ATTACHMENTS_BUCKET=sale-module-attachments-dev
S3_INVOICES_BUCKET=sale-module-invoices-dev

# Lambda Functions (for invoice generation)
TEMPLATE_RENDERER_FUNCTION=template-renderer-dev
PDF_GENERATOR_FUNCTION=pdf-generator-dev
SDI_INVOICE_GENERATOR_FUNCTION=sdi-invoice-generator-dev

# API Gateway
API_THROTTLE_RATE_LIMIT=1000
API_THROTTLE_BURST_LIMIT=2000

# Monitoring
ENABLE_XRAY_TRACING=true
LOG_LEVEL=DEBUG
