# Production Environment Configuration
# Copy to production.env and fill in actual values
# IMPORTANT: Keep this file secure and never commit actual values to version control

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx

# DynamoDB Tables
DYNAMODB_SALES_TABLE=SalesTable-production
DYNAMODB_BUYERS_TABLE=BuyersTable-production
DYNAMODB_PRODUCERS_TABLE=ProducersTable-production

# S3 Buckets
S3_ATTACHMENTS_BUCKET=sale-module-attachments-production
S3_INVOICES_BUCKET=sale-module-invoices-production

# Lambda Functions (for invoice generation)
TEMPLATE_RENDERER_FUNCTION=template-renderer-production
PDF_GENERATOR_FUNCTION=pdf-generator-production
SDI_INVOICE_GENERATOR_FUNCTION=sdi-invoice-generator-production

# API Gateway
API_THROTTLE_RATE_LIMIT=10000
API_THROTTLE_BURST_LIMIT=20000

# Monitoring
ENABLE_XRAY_TRACING=true
LOG_LEVEL=WARN

# Alarms
ENABLE_CLOUDWATCH_ALARMS=true
ALARM_EMAIL=ops@i2speedex.com
