# Staging Environment Configuration
# Copy to staging.env and fill in actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx

# DynamoDB Tables
DYNAMODB_SALES_TABLE=SalesTable-staging
DYNAMODB_BUYERS_TABLE=BuyersTable-staging
DYNAMODB_PRODUCERS_TABLE=ProducersTable-staging

# S3 Buckets
S3_ATTACHMENTS_BUCKET=sale-module-attachments-staging
S3_INVOICES_BUCKET=sale-module-invoices-staging

# Lambda Functions (for invoice generation)
TEMPLATE_RENDERER_FUNCTION=template-renderer-staging
PDF_GENERATOR_FUNCTION=pdf-generator-staging
SDI_INVOICE_GENERATOR_FUNCTION=sdi-invoice-generator-staging

# API Gateway
API_THROTTLE_RATE_LIMIT=5000
API_THROTTLE_BURST_LIMIT=10000

# Monitoring
ENABLE_XRAY_TRACING=true
LOG_LEVEL=INFO
