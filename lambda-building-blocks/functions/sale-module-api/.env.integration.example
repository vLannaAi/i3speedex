# Integration Test Configuration
# Copy this file to .env.integration and fill in the values

# Enable integration tests (required)
RUN_INTEGRATION_TESTS=true

# API endpoint (required)
# For local testing with LocalStack:
API_BASE_URL=http://localhost:3000
# For deployed environment:
# API_BASE_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev

# Authentication tokens (required)
# Generate tokens using AWS Cognito or mock token generator
ADMIN_TOKEN=your-admin-jwt-token-here
OPERATOR_TOKEN=your-operator-jwt-token-here

# Optional configuration
TEST_TIMEOUT=30000
CLEANUP_ON_FAILURE=true
SKIP_CLEANUP=false

# AWS Configuration (for LocalStack)
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# DynamoDB Table Names
DYNAMODB_SALES_TABLE=SalesTable
DYNAMODB_BUYERS_TABLE=BuyersTable
DYNAMODB_PRODUCERS_TABLE=ProducersTable

# S3 Bucket Names
S3_ATTACHMENTS_BUCKET=sale-module-attachments
S3_INVOICES_BUCKET=sale-module-invoices

# Lambda Function Names (for invoice generation)
TEMPLATE_RENDERER_FUNCTION=template-renderer
PDF_GENERATOR_FUNCTION=pdf-generator
SDI_INVOICE_GENERATOR_FUNCTION=sdi-invoice-generator

# Cognito Configuration
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
