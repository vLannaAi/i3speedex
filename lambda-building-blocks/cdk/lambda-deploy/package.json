{
  "name": "html-to-pdf-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for converting HTML to PDF using Puppeteer",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "package": "npm run build && zip -r function.zip dist/ node_modules/",
    "local": "sam local invoke HtmlToPdfFunction -e events/sample-invoice.json"
  },
  "keywords": [
    "aws",
    "lambda",
    "pdf",
    "puppeteer",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "puppeteer-core": "^21.11.0"
  }
}
